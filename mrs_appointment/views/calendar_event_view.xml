<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrs_calendar_event_form" model="ir.ui.view">
        <field name="name">Calendar Event</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form" />
        <field name="arch" type="xml">
            <sheet position="before">
                <header>
                    <field name="is_appointment_done" invisible="True" />
                    <field name="visit_id" invisible="True" />
                    <button name="action_go_to_current_visit" type="object" string="Start Visit" class="oe_highlight" invisible="is_appointment_done or not patient_id or ( patient_id and current_visit )" groups="mrs_mrs.mrs_user,mrs_mrs.mrs_manager,mrs_mrs.mrs_administrator,mrs_mrs.mrs_doctor" />
                    <button name="action_go_to_current_visit" type="object" string="Continue Visit" class="oe_highlight" invisible="is_appointment_done or not patient_id or ( patient_id and not current_visit )" groups="mrs_mrs.mrs_user,mrs_mrs.mrs_manager,mrs_mrs.mrs_administrator,mrs_mrs.mrs_doctor" />
                    <button name="action_go_to_current_visit" type="object" string="View Visit" class="oe_highlight" invisible="not (visit_id and is_appointment_done)" groups="mrs_mrs.mrs_user,mrs_mrs.mrs_manager,mrs_mrs.mrs_administrator,mrs_mrs.mrs_doctor" />
                </header>
            </sheet>
            <field name="current_status" position="before">
                <field name="patient_id" context="{'form_view_ref': 'mrs_patient.mrs_patient_view_form'}" />
                <field name="current_visit" invisible="True" />
            </field>
        </field>
    </record>
    <record id="view_mrs_calendar_gantt_event_form" model="ir.ui.view">
        <field name="name">Calendar Event Gantt</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="appointment.calendar_event_view_form_gantt_booking" />
        <field name="arch" type="xml">
            <field name="partner_ids" position="before">
                <field name="is_patient_appointment" invisible="True" />
                <field name="patient_id" invisible="not is_patient_appointment" placeholder="Choose a patient" required="is_patient_appointment" />
            </field>
        </field>
    </record>
    <record id="view_mrs_calendar_quick_event_form" model="ir.ui.view">
        <field name="name">Calendar Event Gantt</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form_quick_create" />
        <field name="arch" type="xml">
            <field name="start_date" position="before">
                <field name="is_patient_appointment" invisible="True" />
                <field name="patient_id" placeholder="Choose a patient" />
                <field name="appointment_type_id" />
            </field>
        </field>
    </record>
</odoo>
