<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrs_patient_program_form_view" model="ir.ui.view">
        <field name="name">Patient</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="mrs_mrs.mrs_patient_patient_form_view" />
        <field name="arch" type="xml">
            <button name="action_view_partner_visits" position="after">
                <button type="object" class="oe_stat_button" icon="fa-info" name="action_view_partner_program"
                    groups="mrs_mrs.mrs_user,mrs_mrs.mrs_manager,mrs_mrs.mrs_administrator,mrs_mrs.mrs_doctor"
                    context="{'default_patient_id': id}">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                        </span>
                        <span class="o_stat_text">Program</span>
                    </div>
                </button>
            </button>

            <page name="patient_detail" position="inside">
                <group string="Program">
                    <field name="program_ids"
                        readonly="True"
                        widget="section_and_note_one2many"
                        nolabel="1" colspan="2" context="{'default_patient_id': id}"
                        mode="tree">
                        <tree>
                            <field name="program_id" />
                            <field name="date_start" />
                            <field name="date_end" />
                            <field name="mrs_location_id" />
                        </tree>
                    </field>
                </group>
            </page>
        </field>
    </record>
</odoo>
