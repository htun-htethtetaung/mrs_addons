<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrs_lab_form" model="ir.ui.view">
        <field name="name">Prescription Lab</field>
        <field name="model">mrs.lab</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="visit_state" />
                            <field name="test_type_id" attr="" readonly="visit_state == 'ENDED'" />
                            <field name="lab_ref_no" readonly="visit_state == 'ENDED'" />
                        </group>
                        <group>
                            <field name="priority" readonly="visit_state == 'ENDED'" />
                            <field name="note" readonly="visit_state == 'ENDED'" />
                        </group>
                    </group>
                    <notebook id="mrs_lab_notebook">
                        <page id="mrs_lab_attachment" string="Attachments">
                            <div>
                                <field name="res_model" invisible="1" />
                                <field name="os_attachment_ids"
                                    widget="section_and_note_one2many"
                                    context="{'default_res_model': res_model}"
                                    readonly="False"
                                    mode="tree">
                                    <tree>
                                        <field name="name" />
                                        <field name="type" />
                                        <field name="write_date" />
                                        <button name="preview" type="object" string="View" />
                                    </tree>
                                </field>
                            </div>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_mrs_lab_list" model="ir.ui.view">
        <field name="name">Prescription Lab</field>
        <field name="model">mrs.lab</field>
        <field name="arch" type="xml">
            <tree create="False">
                <field name="patient_id" />
                <field name="visit_id" />
                <field name="test_type_id" />
                <field name="lab_ref_no" />
                <field name="priority" />
                <field name="note" />
            </tree>
        </field>
    </record>
    <record id="mrs_lab_action" model="ir.actions.act_window">
        <field name="name">Prescription Lab</field>
        <field name="res_model">mrs.lab</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Add a new Lab
            </p><p>
            Create Lab
            </p>
        </field>
    </record>
</odoo>